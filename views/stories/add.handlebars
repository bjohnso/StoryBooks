<h1>Add Story</h1>

<div class="row">
    <form action="/stories" method="POST" class="col s12" id="story-add-form" name="story-add-form">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select name="status">
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <p>
                <input type="checkbox" name="allowComments" class="filled-in" id="allowComments" checked="checked">
                <label for="allowComments">Allow Comments</label>
            </p>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story</h5>
                <div name = "editor" id="editor"></div>
                <input name = "body" type="text" hidden = "true">
            </div>
        </div>
    </form>
    <form method="POST" id="psuedo-form" name="psudeo-form">
        <input type="submit" value="Save" class="btn">
    </form>
</div>